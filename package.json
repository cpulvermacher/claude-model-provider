{
    "name": "claude-model-provider",
    "publisher": "cpulvermacher",
    "displayName": "Claude Model Provider",
    "description": "Provides Claude language models via the Anthropic API",
    "repository": {
        "type": "git",
        "url": "https://github.com/cpulvermacher/claude-model-provider.git"
    },
    "version": "0.2.0",
    "engines": {
        "vscode": "^1.107.0"
    },
    "categories": [
        "AI",
        "Chat",
        "Machine Learning"
    ],
    "keywords": [
        "ai",
        "chat",
        "language model",
        "claude"
    ],
    "enabledApiProposals": [],
    "activationEvents": [],
    "contributes": {
        "languageModelChatProviders": [
            {
                "vendor": "claude-model-provider",
                "displayName": "claude"
            }
        ]
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "rm -rf out/ && npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
        "build": "pnpm exec vsce package --no-dependencies",
        "format": "pnpm exec biome check --write src/",
        "lint": "tsc --noEmit && pnpm exec biome check src/",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.71.2"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.11",
        "@types/node": "22.x",
        "@types/vscode": "1.107.0",
        "@vscode/vsce": "^3.7.1",
        "esbuild": "^0.27.2",
        "typescript": "^5.9.3"
    }
}
